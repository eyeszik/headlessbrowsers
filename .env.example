# Application Configuration
PROJECT_NAME="Content Automation Platform"
VERSION="1.0.0"
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=content_automation
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Twitter API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Facebook Graph API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram Graph API (uses Facebook credentials)
INSTAGRAM_APP_ID=your-facebook-app-id
INSTAGRAM_APP_SECRET=your-facebook-app-secret

# LinkedIn API v2
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=1000

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=1000

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_FILE=.audit_log.jsonl

# ─── Stock Image Pipeline ───────────────────────────────────────────────────

# Notion
NOTION_API_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# Image Generation
IMAGE_GEN_PROVIDER=openai
# Options: openai (DALL-E 3), stability (Stable Diffusion), mock
STABILITY_AI_API_KEY=your-stability-ai-api-key
IMAGE_GEN_BATCH_SIZE=10
IMAGE_GEN_SIZE=1024x1024

# Upscaling
UPSCALER_BACKEND=pillow
# Options: pillow (CPU, always available), realesrgan (GPU required)
UPSCALE_TARGET_WIDTH=6000
UPSCALE_TARGET_HEIGHT=4000

# Metadata SEO Generation
METADATA_AI_PROVIDER=openai
METADATA_KEYWORD_COUNT=40
METADATA_DESCRIPTION_MIN_LENGTH=200
METADATA_DESCRIPTION_MAX_LENGTH=500
TARGET_STOCK_PLATFORMS=shutterstock,adobe_stock,getty,istock

# Local Storage
STOCK_IMAGES_LOCAL_PATH=./data/stock_images
METADATA_FILES_PATH=./data/metadata
